  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 5rpx;
  padding-right: 5rpx;
  background: black;
  color: orange;
  font-size: 10pt;
  width: 150rpx;
  height: 60rpx;
  border: 1rpx solid orange;
  border-radius: 30rpx;
}

.part1_select{
  display: flex;
  flex-direction: row;
  padding-top: 46rpx;
}
.part1_select_overview{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33333%;
}
.part1_select_news{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33333%;
}
.part1_select_community{
  display: flex;
  flex-direction: column;
