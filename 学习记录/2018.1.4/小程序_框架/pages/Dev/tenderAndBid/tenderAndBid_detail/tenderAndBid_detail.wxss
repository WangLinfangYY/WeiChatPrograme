}
.deadline{
  padding-left: 20rpx;
  padding-top: 20rpx;
  font-size: 11pt;
}
.shopInfo{
  display: flex;
  flex-direction: row;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 15rpx;
  padding-bottom: 20rpx;
  border: 1px solid lightgrey;
  border-radius: 10rpx;
}
.shopInfo_logo{
  padding-left: 20rpx;
  padding-top: 30rpx;
  padding-right: 20rpx;
}
.shopInfo_logo_img{
  width: 100rpx;
  height: 100rpx;
  background: blue;
  border-radius: 50%;
}
.shopInfo_titleAndMark{
  display: flex;
  flex-direction: column;
}
.shopInfo_titleAndMark_title{
  padding-top: 30rpx;
  font-size: 13pt;
}
.shopInfo_titleAndMark_mark{
  display: flex;
  flex-direction: row;
  padding-top: 30rpx;
}
.shopInfo_titleAndMark_mark_img{
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  background: blue;
}
.shopInfo_titleAndMark_mark_content{
  margin-left: 10rpx;
  width: 370rpx;
  font-size: 12pt;
}
.shopInfo_line{
  margin-right: 0rpx;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  width: 1rpx;
  background: lightgray;
}
.shopInfo_des{
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx;
  width: 130rpx;
}
.shopInfo_des_item{
  margin-top: 20rpx;
  font-size: 12pt;
}
.shopInfo_des_zhiShu{
  margin-top: 15rpx;
  font-size: 11pt;
  color: blue;
}
.shopInfo_des_reDu{
  margin-top: 15rpx;
  font-size: 11pt;
  color: red;
}

.shopDes{
  padding-left: 30rpx;
}
.shopDes_content{
  padding-top: 20rpx;
  font-size: 12pt;
}
.shopDes_situation{
  margin-top: 20rpx;
}
.shopDes_require{
  margin-top: 80rpx;
}
.shopDes_contact{
  margin-top: 80rpx;
}

.seperateLine{
  margin-top: 30rpx;
  width: 100%;
  height: 5rpx;
  background: lightgray;
}

.comment_list{
  margin-top: 1rpx;
  padding-bottom: 20rpx;
}
.comment_item{
  display: flex;
  flex-direction: row;
}
.comment_item_portrait{
  display: flex; 
  justify-content: center;
  background: white;
  width: 130rpx;
}
.comment_item_portrait_img{
  height: 80rpx;
  width: 80rpx;
  margin-top: 20rpx;
  border-radius: 50%;
  background: blue;
}
.comment_item_section{
  display: flex;
  flex: 1;
  flex-direction: column;
  margin-left: 20rpx;
  margin-right: 12rpx;
}
.comment_item_section_nameAndBtn{
  display: flex;
  flex-direction: row;
}
.comment_item_section_nameAndBtn_name{
  padding-top: 30rpx;
  font-size: 10pt;
  color: blue;
}
.comment_item_section_nameAndBtn_btn{
  width: 80rpx;
  height: 60rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 10pt;
}
.comment_item_section_content{
  padding-top: 15rpx;
  font-size: 12pt;
}
.comment_item_section_time{
  padding-top: 15rpx;
  font-size: 11pt;
  color: gray;
}
.comment_item_section_replyList{
  margin-top: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  background: lightgray;
}
.comment_item_section_replyList_item{
  padding-top: 20rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  font-size: 11pt;
}

.comment_item_line{
  margin-top: 10rpx;
  margin-left: 15rpx;
  margin-right: 0rpx;
  height: 2rpx;
  background: lightgray;
}